<script>
(function(){
  const hideSupportInfo = () => {
    document.querySelectorAll('#supportInfo,.supportInfo')
            .forEach(el => el.style.display = 'none');
  };

  const placeFooter = () => {
    const footer = document.getElementById('appleFooter');
    if(!footer) return;
    const container = document.querySelector('.wFormContainer') || document.body;
    if(container && footer.parentNode !== container){
      container.appendChild(footer);
    }
    hideSupportInfo();
  };

  document.addEventListener('DOMContentLoaded', placeFooter);
  window.addEventListener('load', placeFooter);

  /* Re-run if FA re-renders after validation */
  new MutationObserver(placeFooter)
       .observe(document.body, {childList:true,subtree:true});
})();
</script>
